/* details.wxss */
@import "commentCell.wxss";
@import "relatedCell.wxss";

.mainView {
  width: 100%;
}

/* 顶部播放器 */

.tt_player_view {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  height: 490rpx;
  background-color: #f7f7f7;
}

.tt_player_video {
  width: 100%;
  height: 420rpx;
}

/* 镜像 */

.tt_mirror {
  transform: scaleX(-1);
  -moz-transform: scaleX(-1);
  -webkit-transform: scaleX(-1);
  -o-transform: scaleX(-1);
  transition: all 0.3s;
}

.tt_player_control_bar {
  position: absolute;
  width: 100%;
  bottom: 0;
  height: 70rpx;
  background-color: #f7f7f7;
  text-align: center;
  vertical-align: middle;
  line-height: 70rpx;
  font-size: 30rpx;
}

.tt_player_loop {
  display: inline-block;
  margin-left: 0;
  width: 33%;
  height: 100%;
}

.tt_player_mirror {
  display: inline-block;
  margin-left: 0;
  width: 33%;
  height: 100%;
}

.tt_player_speed {
  display: inline-block;
  margin-left: 0;
  width: 33%;
  height: 100%;
}

/* 内容scrollView */

.tt_detail_content_scroll {
  position: absolute;
  width: 100%;
  top: 490rpx;
  left: 0;
  bottom: 0;
}

/* 简介描述 */

.tt_detail_top_view {
  margin-top: 16rpx;
  margin-left: 26rpx;
  margin-right: 26rpx;
}

.tt_detail_user_name {
  font-size: 30rpx;
}

.tt_detail_description {
  font-size: 26rpx;
  margin-top: 16rpx;
}

/* 播放列表 */

.tt_videoList_superView {
  margin-left: 20rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.tt_videoList_scrollView {
  width: 100%;
  height: 140rpx;
  white-space: nowrap;
}

.tt_videoList_item {
  display: inline-block;
  width: 220rpx;
  height: 100%;
  border-right: 10rpx solid white;
}

.playingItem {
  background-color: #ffdc10;
}

.upPlayItem {
  background-color: #e7e7e7;
}

.tt_videoList_title {
  width: 100%;
  height: 100%;
  text-align: center;
  white-space: pre-wrap;
  display: inline-block;
  vertical-align: middle;
  font-size: 30rpx;
}

/* 分隔条样式 */

.tt_lineView {
  height: 15px;
  background-color: #f2f2f2;
}

/* 板块title样式 */

.tt_detail_module_title_view {
  height: 40px;
  line-height: 40px;
  font-size: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.tt_detail_module_title {
  margin-left: 26rpx;
}

/* 写评论 */

.tt_write_comment {
  margin-right: 26rpx;
  float: right;
}

/* 加载更多 */

.tt_noMore_view {
  width: 100%;
  height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #454545;
  line-height: 60rpx;
}

/* 输入框 */

.tt_inputBar {
  position: absolute;
  left: 0;
  right: 0;
  background-color: #e7e7e7;
  height: 80rpx;
  font-size: 28rpx;
}

.tt_input_View {
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 100%;
}

.startInput {
  bottom: 450rpx;
}

.endInput {
  bottom: 0;
}
